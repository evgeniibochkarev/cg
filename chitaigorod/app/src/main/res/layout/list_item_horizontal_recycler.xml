<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/product_item_card"
	android:layout_width="150dp"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
  		android:id="@+id/product_item_card_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardBackgroundColor="@android:color/white"
		card_view:cardElevation="2dp"
		card_view:cardUseCompatPadding="true"
	>

		<RelativeLayout
			android:id="@+id/product_item_bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="3dp">
			<ru.chitaigorod.android.UX.custom_view.ResizableImageView
				android:id="@+id/product_item_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"

				android:adjustViewBounds="true"
				android:padding="3dp"
				android:contentDescription="@string/content_description_product_image"
				android:scaleType="fitCenter"/>

			<TextView
				android:id="@+id/product_item_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:paddingLeft="4dp"
				android:layout_below="@+id/product_item_image"
				android:textColor="@color/textPrimary"
				android:fontFamily="sans-serif-light"
				android:maxLines="2"
				android:textSize="16sp"
				tools:text="Kotnickove ponozky s krajkou"/>
			<TextView
				android:id="@+id/product_item_author"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"   
				android:layout_below="@+id/product_item_name"
				android:fontFamily="sans-serif-light"
				android:maxLines="2"
				android:paddingLeft="4dp"
				android:textSize="12sp"
            />

			<TextView
				android:id="@+id/product_item_status"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="5dp"
				android:layout_below="@+id/product_item_author"
				android:fontFamily="sans-serif-light"
				android:gravity="center"
				android:maxLines="2"
				android:textSize="12sp"
            />
			<TextView
				android:id="@+id/product_item_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:layout_below="@+id/product_item_status"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:textColor="@color/textPrimary"
				android:textSize="16sp"
			/>
			<TextView
				android:id="@+id/product_item_old_price"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/product_item_price"
				android:layout_alignBottom="@+id/product_item_price"
				android:maxLines="1"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:textColor="@color/textSecondary"
				android:textSize="10sp"
				tools:text="150 USD"/>
			<TextView
				android:id="@+id/product_item_discount"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="none"
				android:paddingLeft="4dp"
				android:layout_below="@+id/product_item_price"
				android:paddingRight="4dp"
				android:textColor="@color/colorAccent"
				android:textSize="10sp"    
			/>


		</RelativeLayout>

	</android.support.v7.widget.CardView>
</LinearLayout>
